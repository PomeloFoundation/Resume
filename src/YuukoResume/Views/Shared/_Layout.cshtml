
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>@ViewBag.Title - @SR["Admin Panel"]</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/admin/css/animate.min.css" rel="stylesheet" />
    <link href="~/admin/css/light-bootstrap-dashboard.css" rel="stylesheet" />
    <link href="~/admin/css/demo.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="~/admin/css/pe-icon-7-stroke.css" rel="stylesheet" />
    <link href="~/admin/css/datetimepicker.css" rel="stylesheet" />

    <script src="~/admin/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/admin/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/admin/js/bootstrap-checkbox-radio-switch.js"></script>
    <script src="~/admin/js/chartist.min.js"></script>
    <script src="~/admin/js/bootstrap-notify.js"></script>
    <script src="~/admin/js/light-bootstrap-dashboard.js"></script>
    <script src="~/admin/js/jquery.datetimepicker.js"></script>
    <script src="~/admin/js/jquery.pomelo.fileupload.js"></script>
    <script src="~/admin/js/moment.js"></script>
    <script src="~/admin/js/jquery.signalr-2.0.3.js"></script>
    <script src="/signalr/hubs"></script>
</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-color="red" data-image="/admin/img/sidebar-5.jpg">

            <!--   you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" -->


            <div class="sidebar-wrapper">
                <div class="logo">
                    <a asp-action="Index" asp-controller="Home" class="simple-text">
                        Yuuko Resume
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a asp-action="Index" asp-controller="Admin">
                            <i class="pe-7s-graph"></i>
                            <p>@SR["Dashboard"]</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Education" asp-controller="Admin">
                            <i class="pe-7s-notebook"></i>
                            <p>@SR["Education"]</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Experience" asp-controller="Admin">
                            <i class="pe-7s-portfolio"></i>
                            <p>@SR["Experience"]</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Skill" asp-controller="Admin">
                            <i class="pe-7s-tools"></i>
                            <p>@SR["Skill"]</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Project" asp-controller="Admin">
                            <i class="pe-7s-plugin"></i>
                            <p>@SR["Projects"]</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Certificate" asp-controller="Admin">
                            <i class="pe-7s-cup"></i>
                            <p>@SR["Certificate"]</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Visitor" asp-controller="Admin">
                            <i class="pe-7s-look"></i>
                            <p>@SR["Visitor"]</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Home">
                            <i class="pe-7s-home"></i>
                            <p>@SR["Back To Home"]</p>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:$('#frmLogout').submit()">
                            <i class="pe-7s-angle-left-circle"></i>
                            <p>@SR["Sign Out"]</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">@SR["Notifications"]</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-dashboard"></i>
                                    <b class="caret"></b>
                                    @if (ViewBag.Notifications.Count > 0)
                                    {
                                        <span class="notification">@ViewBag.Notifications.Count</span>
                                    }
                                </a>
                                @if (ViewBag.Notifications.Count > 0)
                                {
                                    <ul class="dropdown-menu">
                                        @foreach (var x in ViewBag.Notifications)
                                        {
                                            <li>@SR["SENT_TO_EMAIL", x.Time.ToString(SR["DATE_FORMAT"]), x.Email]</li>
                                        }
                                    </ul>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <p class="copyright pull-right">
                        &copy; 2016 <a href="https://github.com/PomeloFoundation/YuukoResume">Pomelo Foundation</a>. All rights reserved.
                    </p>
                </div>
            </footer>

        </div>
    </div>

    <form id="frmLogout" asp-action="Logout" asp-controller="Admin"></form>
</body>

</html>
