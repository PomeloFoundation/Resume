@{ 
    ViewBag.Title = SR["Create Skill"];
}

<form asp-action="CreateSkill" asp-controller="Admin" class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h4 class="title">@ViewBag.Title</h4>
                <p class="category">@SR["Fill the following form, and it will be shown in your resume."]</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <td>@SR["Skill Title"]</td>
                        <td><input type="text" name="Title" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@SR["Type"]</td>
                        <td>
                            <select name="Performance" class="form-control">
                                <option value="Profession">@SR["Profession"]</option>
                                <option value="Language">@SR["Language"]</option>
                                <option value="Other">@SR["Other"]</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>@SR["Level"]</td>
                        <td><input type="range" min="0" max="100" step="1" name="Level" class="form-control" /></td>
                    </tr>
                </table>
                <p style="text-align: center">
                    <input type="submit" class="btn btn-danger" value="@SR["Submit"]" />
                </p>
            </div>
        </div>
    </div>
</form>